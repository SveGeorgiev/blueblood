@model BlueBloodSystem.Models.TransactonsViewModel

@{
    ViewBag.Title = "Index";
}

<div id="transactions-wrapper">
    <h2>Месец @Model.Month @Model.Year</h2>
    <p class="admin">
        @Html.ActionLink("Добави", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Име")
            </th>
            <th>
                @Html.DisplayName("Дата")
            </th>
            <th>
                @Html.DisplayName("Стойност")
            </th>
            <th>
                @Html.DisplayName("Приход/Разход")
            </th>
            <th class="admin"></th>
            <th class="admin"></th>
        </tr>

        @if (Model != null)
        {
            foreach (var item in Model.Transactions)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDividend)
                    </td>
                    <td class="admin">@Html.ActionLink("Редакция", "Edit", new { id = item.Id })</td>
                    <td class="admin">@Html.ActionLink("Изтриване", "Delete", new { id = item.Id })</td>
                </tr>
            }
        }
    </table>

    <p><b>Приходи:</b> @Model.Incoming</p>
    <p><b>Разходи:</b> @Model.Outgoin</p>
    <p><b>Тотал:</b> @Model.Total</p>
</div>
<script src="~/Scripts/app/transaction-index.js"></script>